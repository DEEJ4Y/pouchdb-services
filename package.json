  "dependencies": {
    "bson-objectid": "^2.0.4",
    "pouchdb": "^8.0.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/pouchdb": "^6.4.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.4"
  },
  "repository": "https://github.com/DEEJ4Y/pouchdb-services.git"
}
